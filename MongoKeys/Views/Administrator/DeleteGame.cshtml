@using MongoKeys.Models
<div class="container-fluid">
    <div class="row">

        <nav class="col-md-2 d-none d-md-block bg-light sidebar" style="margin-top: 56px;">
            <div class="sidebar-sticky">

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Пользователи</span>
                </h6>
                <ul class="nav flex-column mb-2">

                    <li class="nav-item">
                        <a class="nav-link" href="/Administrator/AddUser">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                            Создать нового пользователя
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Administrator/ChangeOrDeleteUser">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                            Изменить/Удалить зарегистрированного пользователя
                        </a>
                    </li>

                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Игры</span>
                </h6>
                <ul class="nav flex-column mb-2">

                    <li class="nav-item">
                        <a class="nav-link" href="/Administrator/AddGame">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                            Добавить игру в магазин
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Administrator/ChangeOrDeleteGame">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                            Удалить/Изменить игру в магазине
                        </a>
                    </li>

                </ul>
            </div>
        </nav>

        @using (var context = new ApplicationContext())
        {
            int Id = ViewBag._Id;
            var game = context.Games.FirstOrDefault(g => g._Id == Id);
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4" style="margin-top: 56px;">
                <div class="container h-100" style="margin-bottom: 10%; margin-top: 10%;">
                    <div class="row h-100 justify-content-center align-items-center">
                        <div class="container h-100">
                            <div class="row h-100 justify-content-center align-items-center">
                                <div class="container">
                                    <form action="DeleteUser" method="post">
                                        <h1 align="center">Удаление игры</h1>
                                        <p class="lead" align="center">Это действие невозможно отменить.</p>
                                        <p class="lead" align="center">
                                            Вы действительно хотите удалить игру <b>@game._Name</b>?
                                        </p>
                                        <div class="d-flex justify-content-center">
                                            <input id="Name" name="Name" value="@game._Name" style="display: none;" />
                                            <button class="btn btn-primary" type="submit" style="margin: 20px;">Так точно!</button>
                                            <a class="btn btn-primary" href="/Administrator/ChangeOrDeleteGame" style="margin: 20px;">Никак нет!</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        }

    </div>
</div>