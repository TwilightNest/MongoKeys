@using MongoKeys.Models
@using (var context = new ApplicationContext())
{
    var currentUser = context.Users.FirstOrDefault(u => u._Login == User.Identity.Name);
    int id = ViewBag._Id;
    var user = context.Users.FirstOrDefault(u => u._Id == id);

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand mr-auto mr-lg-0" href="#">Offcanvas navbar</a>
    </nav>

    <div class="nav-scroller bg-white shadow-sm">
        <nav class="nav nav-underline">
            <a class="nav-link active" href="/User/Index/@currentUser._Id">Профиль</a>
            <a class="nav-link" href="/User/Settings/@currentUser._Id">Настройки</a>
            <a class="nav-link" href="/User/LogOff">Выход</a>
        </nav>
    </div>

    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3" style="display: inline-block;">@user._Login</h1>
            @{
                var path = "/Content/Avatars/" + user._Id + ".png";
                <img src="@path" class="rounded float-right" style="height: 30%; width: 30%;">
            }
            <div class="row-md-4">
                <h2>Электронная почта</h2>
                <p>@user._Email</p>
            </div>
        </div>
    </div>

    <h2 style="text-align: center">Игры, которые приобрел пользователь</h2>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
               
                @if (user._Games.Count > 0)
                {
                    foreach (var game in user._Games)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                                    <title>Placeholder</title>
                                    @{
                                        var GameImagePath = game._Id + ".png";
                                    }
                                    <image xlink:href="/Content/Images/@GameImagePath" x="0" y="0" height="100%" width="100%"/>
                                    <text x="1%" y="95%" fill="#efefef" dy=".3em" style="font-weight: bold">@game._Name</text>
                                </svg>
                                <div class="card-body">
                                    <p class="card-text">@game._ShortDescription</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                                <a href="/User/PlayGame/?steamId=@game._SteamId">Играть</a>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                                <a href="/Home/ViewGame/@game._Id">Подробнее</a>
                                            </button>
                                        </div>
                                        <small class="text-muted">
                                            <b>@game._Genre</b>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h6>Данный пользователь пока что не приобрёл ни одной игры(</h6>
                }

            </div>
            <hr>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="/docs/4.3/assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="/docs/4.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous"></script>
    <script src="offcanvas.js"></script>
}