@using MongoKeys.Models
<section class="jumbotron text-center" style="margin-top: 56px;">
    <div class="container">
        <h1 class="jumbotron-heading">Раздачи</h1>
        <p class="lead text-muted">На этой странице вы можете просмотреть информацию о бесплатных играх, забрать их к себе в библиотеку, и поделиться своим мнением с другими пользователями.</p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @using (var context = new ApplicationContext())
            {
                foreach (var game in context.Games)
                {
                    if (game._Price == 0 || game._Sale == 100)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                                    <title>Placeholder</title>
                                    @{
                                        var GameImagePath = game._Id + ".png";
                                    }
                                    <image xlink:href="~/Content/Images/@GameImagePath" x="0" y="0" height="100%" width="100%"/>
                                    <text x="1%" y="95%" fill="#efefef" dy=".3em" style="font-weight: bold">@game._Name</text>
                                </svg>
                                <div class="card-body">
                                    <p class="card-text">@game._ShortDescription</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                                <a href="/Home/TakeGame/@game._Id">Забрать</a>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                                <a href="/Home/ViewGame/@game._Id">Подробнее</a>
                                            </button>
                                        </div>
                                        <small class="text-muted">
                                            <b>Бесплатно</b>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>